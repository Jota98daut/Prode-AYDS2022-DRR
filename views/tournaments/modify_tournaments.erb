<h1>Stages</h1>

<ul>
  <% @stages.each do |stage| %>
    <%= "<li>#{stage.name} 
      <a href=\"http://localhost:4567/stages/#{stage.id}\"><button>View</button></a>
        <form action=\"http://localhost:4567/stages/#{stage.id}\" method='POST'>
          <input type='hidden' name='_method' value='DELETE'>
          <button type='submit'>Remove</button>
        </form>
    </li>" %>
  <% end %>
</ul>

<a href="http://localhost:4567/stages/new?tournament_id=<%= @tournament.id %>"><button>Add</button></a>


<h1>Matches</h1>

<ul>
  <% @stages.each do |stage|%>
    <% stage.matches.each do |match| %>
      <%= "<li>#{match.home.name} - #{match.away.name} - #{match.date.to_s} - #{match.time.strftime("%H:%M")} - #{match.stage.name}
        <a href=\"http://localhost:4567/matches/#{match.id}\"><button>Modify</button></a>
          <form action=\"http://localhost:4567/matches/#{match.id}\" method='POST'>
            <input type='hidden' name='_method' value='DELETE'>
            <button type='submit'>Remove</button>
          </form>
      </li>" %>
    <% end %>
  <% end %>
</ul>

<a href='http://localhost:4567/matches/new?tournament_id=<%= @tournament.id %>'><button>Add</button></a>
