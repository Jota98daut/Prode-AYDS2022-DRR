<h1>Stages</h1>

<ul>
    <% @stages.each do |stage| %>
        <%= "<li>#{stage.name} 
                 <a href=\"http://localhost:4567/modify_stages?id=#{stage.id}\"><button>Modify</button></a>
                 <form action=\"http://localhost:4567/remove_stages?id=#{stage.id}\" method='POST'><button type='submit'>Remove</button></form>
             </li>" %>
    <% end %>
</ul>

<a href="http://localhost:4567/add_stages?tournament_id=<%= @tournament.id %>"><button>Add</button></a>


<h1>Matches</h1>

<ul>
    <% @stages.each do |stage|%>
        <% stage.matches.each do |match| %>
            <%= "<li>#{match.home.name} - #{match.away.name} - #{match.date.to_s} - #{match.time.strftime("%H:%M")} - #{match.stage.name}
                        <a href=\"http://localhost:4567/modify_matches?id=#{match.id}\"><button>Modify</button></a>
                        <form action=\"http://localhost:4567/remove_matches?id=#{match.id}\" method='POST'><button type='submit'>Remove</button></form>
                    </li>" %>
        <% end %>
    <% end %>
</ul>

<a href='http://localhost:4567/add_matches?tournament_id=<%= @tournament.id %>'><button>Add</button></a>