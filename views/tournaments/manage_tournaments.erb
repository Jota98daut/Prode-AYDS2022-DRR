<h1>Tournaments</h1>

<ul>
    <% @tournaments.each do |tournament| %>
        <%= "<li>#{tournament.name} 
                 <a href=\"http://localhost:4567/modify_tournaments?name=#{tournament.name}\"><button>Modify</button></a>
                 <form action=\"http://localhost:4567/manage_tournaments?name=#{tournament.name}\" method='POST'><button type='submit'>Remove</button></form>
             </li>" %>
    <% end %>
</ul>

<a href='http://localhost:4567/add_tournaments'><button>Add</button></a>